<html>
    <head>
        <title>
            Add category
        </title>
        <link rel="stylesheet" href="/public/css/addsource.css">
        <script>
            function save(){
            var new_data1 = document.getElementById("name").value;
            var new_data2 = document.getElementById("budget").value;
            if(localStorage.getItem('category') == null){
                localStorage.setItem('category', '[]');
            }    

            var old_data = JSON.parse(localStorage.getItem('category'));
            old_data.push(new_data1);
            old_data.push(new_data2)

            localStorage.setItem('category', JSON.stringify(old_data) );
        }
        function view(){
            if(localStorage.getItem("data") != null){
                document.getElementById("name").innerHTML = JSON.parse(localStorage.getItem('category'));
        }
    }

        
        </script>
    </head>
    <body>
        <h1 style = "font-family: 'Times New Roman', Times, serif; font-weight: bolder;">
            ADD CATEGORY
        </h1>
        <div class="box">
        <form class="form" method="POST" action="/category" >
            <table>
                <tr>
                    <td><label for="name" style = "font-family: 'Times New Roman', Times, serif; font-weight: bolder;">Category :</label></td>
                    <td><input type="text" id= "name" class="input-field" name="name"></td>
                </tr>
           <tr>
               <td><label style = "font-family: 'Times New Roman', Times, serif; font-weight: bolder;">Budget :</label></td><br/>
               <td><input type="number" id="budget"  class="input-field" name="budget"></td>
           </tr>
        </table>

         
                <button type="submit" onclick="save();" class="btn" style = "font-family: 'Times New Roman', Times, serif; font-weight: bolder;">Save</button>

        </form>
       
    
        </div>
   
    </body>
</html>